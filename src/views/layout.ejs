            display: flex;
            align-items: center;
        }

        .profile-name {
            margin-right: 20px;
            font-weight: 500;
        }

        .logout-btn {
            background-color: #ff4757;
            border: none;
            padding: 8px 15px;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

        .logout-btn:hover {
            background-color: #e04050;
        }
       

