        /* Navbar container */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #007bff;
            padding: 10px 20px;
            color: white;
        }

        /* Left side items (icons) */
        .nav-left {
            display: flex;
            align-items: center;
        }

        .nav-left a {
            margin-right: 20px;
            text-decoration: none;
            color: white;
            font-size: 14px;
            display: flex;
            align-items: center;
        }

        .nav-left a i {
            margin-right: 8px;
            font-size: 18px;
        }

        .nav-left a:hover {
            color: #ffdd57;
        }

        /* Right side items (profile and logout) */
